{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "paths": {
      "@/*": ["./src/*"],
      "components/*": ["./components/*"],
      "lib/*": ["./lib/*"],
      "hooks/*": ["./hooks/*"],
      "styles/*": ["./styles/*"]
    }
  },
  "include": ["src", "components", "lib", "hooks", "styles", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}